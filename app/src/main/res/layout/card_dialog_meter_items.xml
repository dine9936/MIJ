<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:layout_margin="4dp"
    android:elevation="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp">
<RelativeLayout
    android:id="@+id/rl_online_meter_list"
    android:paddingLeft="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/card_meter_image"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/smallmeter"/>
    <TextView
        android:id="@+id/card_meter_name_online_dialog"
        android:layout_width="match_parent"
        android:paddingLeft="20dp"
        android:layout_height="wrap_content"
        android:text="Meter 1"
        android:layout_toRightOf="@+id/card_meter_image"
        android:layout_centerVertical="true"/>
</RelativeLayout>
</androidx.cardview.widget.CardView>